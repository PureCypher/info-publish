# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Your Discord bot token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Privileged Intents Configuration
# Set to 'true' if you have enabled privileged intents in Discord Developer Portal
# Set to 'false' to run without privileged intents (limited functionality)
PRIVILEGED_INTENTS=false

# Optional: Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Docker and Runtime Configuration
# Memory optimization for Python in containers
MALLOC_TRIM_THRESHOLD_=131072

# Python runtime optimizations
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONIOENCODING=utf-8

# Twitch Stream Notifier Configuration
# Discord Webhook URLs for stream notifications
DISCORD_WEBHOOK_URL=NEW_WEBHOOK_WITHIN_DIFFERENT_CHANNEL_FOR_OTHER_NOTIFICATIONS
B7H30_WEBHOOK_URL=ANNOUNCEMENTS_WEBHOOK

# Twitch API credentials (get from https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=YOURCLIENTID
TWITCH_CLIENT_SECRET=YOURCLIENTSECRET

# CSV URL containing streamers list (Twitch username, YouTube channel)
STREAMERS_CSV_URL=https://raw.githubusercontent.com/infosecstreams/infosecstreams.github.io/refs/heads/main/streamers.csv